[global]
    workgroup = PROTON
    realm = proton.intra.irsn.fr
    netbios name = appwu201v
    server string = %h Pleiade v2 Pre-Production
    security = ADS
    password server = ADCOS101 ADCOS102
    encrypt passwords = true
    idmap uid = 10000-20000
    idmap gid = 10000-20000
    winbind enum groups = yes
    winbind enum users = yes
    winbind use default domain = yes
    invalid users = root

    # Log configuration
    log file = /var/log/samba/log.%m
    max log size = 1000
    syslog = 5
    panic action = /usr/share/samba/panic-action %d

    # Disable printer
    load printers = no

# Add general log sharing
[Logs]
    comment = Logs
    path = /var/log/
    guest ok = no
    browseable = yes
    read only = yes
    valid users = PROTON\TATA-TAR PROTON\TOTO-JUL PROTON\ALVES-jOS
